# =============================================================================
# CROWDAX API ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and update with your actual values
# Never commit .env.local to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Rails Environment
RAILS_ENV=development
RAILS_MASTER_KEY=your_rails_master_key_here

# Application Settings
PLATFORM_NAME=Crowdax
PLATFORM_DESCRIPTION=A platform for investing in innovative campaigns.
APP_HOST=localhost:3000
APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Settings
DATABASE_URL=postgresql://postgres:password@localhost:5432/crowdax_api_development
CROWDAX_API_DATABASE_PASSWORD=your_database_password_here

# Database Pool Settings
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
JOB_CONCURRENCY=1

# =============================================================================
# STORAGE CONFIGURATION (DigitalOcean Spaces)
# =============================================================================

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_do_spaces_access_key_here
DO_SPACES_SECRET=your_do_spaces_secret_key_here
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_DOMAIN=localhost
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=false

# Email Sender
MAILER_SENDER=noreply@crowdax.com

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_TIME=1800

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=localhost:3000,http://localhost:3000,https://your-production-domain.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Kamal Deployment
KAMAL_REGISTRY_PASSWORD=your_registry_password_here
KAMAL_REGISTRY_USERNAME=your-user

# Server Configuration
DEPLOYMENT_HOST=192.168.0.1
DEPLOYMENT_DOMAIN=crowdax-api.loan360.co

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Legal Pages
TERMS_AND_CONDITIONS_URL=https://example.com/terms
PRIVACY_POLICY_URL=https://example.com/privacy

# Contact Information
CONTACT_EMAIL=support@crowdax.com
CONTACT_PHONE=+1234567890

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging
RAILS_LOG_LEVEL=info
LOG_TO_STDOUT=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SSL/HTTPS
FORCE_SSL=true
ASSUME_SSL=true

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Development Settings
ENABLE_RELOADING=true
CONSIDER_ALL_REQUESTS_LOCAL=true
RAISE_DELIVERY_ERRORS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/crowdax_api_test

# =============================================================================
# ENCRYPTION AND SECURITY
# =============================================================================

# Encryption Key (for file encryption service)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# QUEUE AND CACHE CONFIGURATION
# =============================================================================

# Solid Queue
SOLID_QUEUE_IN_PUMA=true

# Cache Configuration
CACHE_STORE=memory_store

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_BREACH_NOTIFICATIONS=true
ENABLE_DATA_SUBJECT_RIGHTS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_KYC_VERIFICATION=true

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================

# Data Protection
DATA_RETENTION_DAYS=2555
BREACH_NOTIFICATION_DAYS=72
CONSENT_EXPIRATION_DAYS=365

# =============================================================================
# API RATE LIMITING
# =============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Health Check
HEALTH_CHECK_ENDPOINT=/up
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Third-party Integrations
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=false

